{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "apple-mail",
  "title": "Apple Mail",
  "description": "Browse and manage your emails in Apple Mail",
  "icon": "command-icon.png",
  "author": "HelloImSteven",
  "license": "MIT",
  "commands": [
    {
      "name": "search-emails",
      "title": "Search Emails",
      "description": "Browse your emails",
      "mode": "view",
      "arguments": [
        {
          "name": "searchTerm",
          "placeholder": "term",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "new-email",
      "title": "Create New Email",
      "description": "Create a new email in Mail.app",
      "mode": "no-view"
    },
    {
      "name": "erase-deleted-items",
      "title": "Erase Deleted Items",
      "description": "Permanently erase deleted emails in every mailbox",
      "mode": "no-view",
      "arguments": [
        {
          "name": "accountName",
          "placeholder": "account",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "erase-junk-items",
      "title": "Erase Junk Items",
      "description": "Permanently erase junk emails",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.46.0",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}